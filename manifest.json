{
  "name": "Chime",
  "short_name": "Chime",
  "version": "0.2.3",
  "description": "Chime improves your time conciousness",
  "background": {
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "background.js"
    ],
    "persistent": false
  },
  "permissions": ["alarms", "storage", "idle"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "manifest_version": 2
}
